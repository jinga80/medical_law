{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health/",
    "healthcheckTimeout": 300,
    "startCommand": "gunicorn medical_law_project.wsgi:application --bind 0.0.0.0:$PORT --timeout 120 --keep-alive 2 --preload"
  }
} 